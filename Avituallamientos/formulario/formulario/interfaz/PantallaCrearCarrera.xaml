<Window x:Class="formulario.interfaz.PantallaCrearCarrera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PantallaCrearCarrera" Height="300" Width="300">
    <Grid>
        <Label x:Name="lNombre" Content="Nombre"  HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btCrear" Content="Crear" HorizontalAlignment="Left" Margin="30,196,0,0" VerticalAlignment="Top" Width="75" Click="btCrear_Click"/>
        <Button x:Name="btCerrar" Content="Cancelar" HorizontalAlignment="Left" Margin="169,196,0,0" VerticalAlignment="Top" Width="75" Click="btCerrar_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,67,0,0" TextWrapping="Wrap" Validation.Error ="Validation_Error" Text="{Binding Path=carreraNueva.NombreCarrera, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
